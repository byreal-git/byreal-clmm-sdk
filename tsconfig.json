{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2022"],
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2022",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,         
    "noImplicitAny": false,  
    "skipLibCheck": true    
  },
}
